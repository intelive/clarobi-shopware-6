<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <!--Entity-->
        <service class="Clarobi\Core\Content\Custom\CustomEntityDefinition"
                 id="clarobi.custom.custom_entity_definition">
            <tag name="shopware.entity.definition" entity="custom_entity"/>
        </service>

        <!--Extending Product-->
        <service id="Clarobi\Extension\Product\ProductCustomExtension">
            <tag name="shopware.entity.extension"/>
        </service>

        <!--Subscriber-->
        <service id="Clarobi\Subscriber\ExampleSubscriber">
            <tag name="kernel.event_subscriber"/>
        </service>

        <!--Service-->
        <service class="Clarobi\Service\ClarobiConfigService" id="clarobi.service.config" public="true">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
        </service>

        <!--todo: add encode service to controllers-->
        <service class="Clarobi\Utils\EncodeResponse" id="clarobi.utils.encode_response">
            <argument id="clarobi.service.config" type="service"/>
        </service>

        <!--Controllers-->
        <service id="Clarobi\Core\Api\DemoController" public="true">
            <argument type="service" id="product.repository"/>
            <argument type="service" id="clarobi.service.config"/>
            <tag name="controller.service_arguments"/>
        </service>

        <service id="Clarobi\Core\Api\ClarobiProductController" public="true">
            <argument type="service" id="product.repository"/>
            <argument type="service" id="clarobi.service.config"/>
            <tag name="controller.service_arguments"/>
        </service>

        <service id="Clarobi\Core\Api\ClarobiCustomerController" public="true">
            <argument type="service" id="customer.repository"/>
            <argument type="service" id="clarobi.service.config"/>
            <tag name="controller.service_arguments"/>
        </service>

        <service id="Clarobi\Core\Api\ClarobiOrderController" public="true">
            <argument type="service" id="order.repository"/>
            <argument type="service" id="clarobi.service.config"/>
            <tag name="controller.service_arguments"/>
        </service>

        <service id="Clarobi\Core\Api\ClarobiInvoiceController" public="true">
            <argument type="service" id="document.repository"/>
            <argument type="service" id="document_type.repository"/>
            <argument type="service" id="clarobi.service.config"/>

            <!--            <argument type="service" id="Shopware\Core\Checkout\Document\DocumentService"/>-->
            <!--            <call method="setContainer">-->
            <!--                <argument type="service" id="service_container"/>-->
            <!--            </call>-->
        </service>

        <service id="Clarobi\Core\Api\ClarobiCreditNoteController" public="true">
            <argument type="service" id="document.repository"/>
            <argument type="service" id="document_type.repository"/>
            <argument type="service" id="clarobi.service.config"/>
        </service>

        <service id="Clarobi\Core\Api\ClarobiAbandonedCartController" public="true">
            <argument type="service" id="clarobi.service.config"/>
            <argument type="service" id="Doctrine\DBAL\Connection"/>
        </service>

        <service id="Clarobi\Core\Api\ClarobiProductCountsController" public="true">
            <argument type="service" id="clarobi.service.config"/>
            <argument type="service" id="Doctrine\DBAL\Connection"/>
        </service>

        <service id="Clarobi\Core\Api\ClarobiDataCountersController" public="true">
            <argument type="service" id="clarobi.service.config"/>
            <argument type="service" id="Doctrine\DBAL\Connection"/>
        </service>

        <!--todo: verify arguments-->
        <service id="Clarobi\Core\Api\ClarobiProductImageController" public="true">
            <argument type="service" id="product.repository"/>
            <tag name="controller.service_arguments"/>
        </service>

    </services>
</container>
