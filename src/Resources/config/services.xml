<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="Clarobi\Core\Api\ClarobiProductController">
            <argument type="service" id="product.repository"/>
            <tag name="controller.service_arguments"/>
        </service>

        <service id="Clarobi\Core\Api\ClarobiCustomerController">
            <argument type="service" id="customer.repository"/>
            <tag name="controller.service_arguments"/>
        </service>

        <service id="Clarobi\Core\Api\ClarobiOrderController">
            <argument type="service" id="order.repository"/>
            <tag name="controller.service_arguments"/>
        </service>

        <service id="Clarobi\Core\Api\ClarobiProductImageController">
            <argument type="service" id="product.repository"/>
            <tag name="controller.service_arguments"/>
        </service>

