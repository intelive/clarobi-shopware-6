<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <!--Entity-->
        <service id="Clarobi\Custom\CustomEntityDefinition">
            <tag name="shopware.entity.definition" entity="custom_entity"/>
        </service>

        <!--Service-->
        <service id="Clarobi\Service\ClarobiConfigService">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
        </service>

        <!--Controllers-->
        <service id="Clarobi\Core\Api\DemoController" public="true">
            <argument type="service" id="product.repository"/>
            <argument type="service" id="Clarobi\Service\ClarobiConfigService"/>
            <tag name="controller.service_arguments"/>
        </service>

        <service id="Clarobi\Core\Api\ClarobiProductController" public="true">
            <argument type="service" id="product.repository"/>
            <argument type="service" id="Clarobi\Service\ClarobiConfigService"/>
            <tag name="controller.service_arguments"/>
        </service>

        <service id="Clarobi\Core\Api\ClarobiCustomerController" public="true">
            <argument type="service" id="customer.repository"/>
            <argument type="service" id="Clarobi\Service\ClarobiConfigService"/>
            <tag name="controller.service_arguments"/>
        </service>

        <service id="Clarobi\Core\Api\ClarobiOrderController" public="true">
            <argument type="service" id="order.repository"/>
            <argument type="service" id="Clarobi\Service\ClarobiConfigService"/>
            <tag name="controller.service_arguments"/>
        </service>

        <service id="Clarobi\Core\Api\ClarobiInvoiceController" public="true">
            <argument type="service" id="document.repository"/>
            <argument type="service" id="document_type.repository"/>
            <argument type="service" id="Clarobi\Service\ClarobiConfigService"/>

            <!--            <argument type="service" id="Shopware\Core\Checkout\Document\DocumentService"/>-->
            <!--            <call method="setContainer">-->
            <!--                <argument type="service" id="service_container"/>-->
            <!--            </call>-->
        </service>

        <service id="Clarobi\Core\Api\ClarobiCreditNoteController" public="true">
            <argument type="service" id="document.repository"/>
            <argument type="service" id="document_type.repository"/>
            <argument type="service" id="Clarobi\Service\ClarobiConfigService"/>
        </service>

        <service id="Clarobi\Core\Api\ClarobiAbandonedCartController" public="true">
            <argument type="service" id="Clarobi\Service\ClarobiConfigService"/>
            <argument type="service" id="Doctrine\DBAL\Connection"/>
        </service>

        <service id="Clarobi\Core\Api\ClarobiProductCountsController" public="true">
            <argument type="service" id="Clarobi\Service\ClarobiConfigService"/>
            <argument type="service" id="Doctrine\DBAL\Connection"/>
        </service>

        <service id="Clarobi\Core\Api\ClarobiDataCountersController" public="true">
            <argument type="service" id="Clarobi\Service\ClarobiConfigService"/>
            <argument type="service" id="Doctrine\DBAL\Connection"/>
        </service>

        <!--todo: verify arguments-->
        <service id="Clarobi\Core\Api\ClarobiProductImageController" public="true">
            <argument type="service" id="product.repository"/>
            <tag name="controller.service_arguments"/>
        </service>

    </services>
</container>
